{% extends "base.html.twig" %}
{% block content %}
<!-- Breadcrumbs-->
<ol class="breadcrumb">
   <li class="breadcrumb-item">
      <a href="/">Todos</a>
   </li>
   <li class="breadcrumb-item active">All</li>
</ol>
<!-- Page Content -->
<h1>Todos</h1>
{{dump(todos)}}
<div class="row">
<div class="col-md-3"></div>
<div class="col-md-9">
<table class="table" width="100%">
   <tbody>
      <tr>
         <td width="25%"><input type="text" class="form-control" id="title" placeholder="Entrer titre"></td>
         <td width="45%"><input type="text" class="form-control" id="description" placeholder="Entrer description"></td>
         <td width="30%">
            <div class="text-center"><button type="button" class="btn btn-success">Valider</button></div>
         </td>
      </tr>
      {% for todo in todos %}
        <tr>
            <td>{{ todo.name }}</td>
            <td>{{ todo.name }}</td>
            <td class="text-center">
              <button type="button" class="btn btn-danger btn_sup">Supprimer</button>
              <button type="button" class="btn btn-primary">Modifier</button>
            </td>
        </tr>
      {% endfor %}
   </tbody>
</table>
</div>
</div>
{% endblock %}